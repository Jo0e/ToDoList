@model IEnumerable<ToDoItem>
<div class="cont-log">
<h3>Welcome, @ViewBag.userData.Name ! </h3>
<p>Here is your to-do list.</p>
<a class="log-btn btn btn-primary" >Logout</a>
</div>
<a class="btn btn-primary mt-2" style="display:inline-block," href="/ToDoItems/CreateNew?id=@ViewBag.userData.Id">Create New</a>
@* ------------Table------------- *@
<table class="table table-secondary table-hover mt-3">
    <tr class="text-center border-bottom-0 ">
        <th>Title</th>
        <th>Description</th>
        <th>Deadline</th>
        <th>Download Attachment</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Deadline</td>
            <td>
                <a data-tooltip="@item.File" class="btn btn-secondary">
                <i class="bi bi-download" style="margin-right:10px"></i> Download File</a></td>
            <td>
                <a href="/ToDoItems/Edit?id=@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> Edit </a>
                <button name="itemId" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-itemid="@item.Id"><i class="bi bi-trash"></i> Delete</button>
            </td>
        </tr>
    }
    
</table>




<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" action="/ToDoItems/Delete">
                    <input type="hidden" name="itemId" id="itemIdInput" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var itemId = button.getAttribute('data-itemid');
        var input = document.getElementById('itemIdInput');
        input.value = itemId;
    });
</script>
